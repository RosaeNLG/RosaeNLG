  "jest": {
    "testEnvironment": "node",
    "snapshotSerializers": [
      "./scripts/filename-serializer.js",
      "./scripts/prettier-javascript-serializer.js"
    ]
  },
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "snyk": "^1.232.0"
  },
  "snyk": true
