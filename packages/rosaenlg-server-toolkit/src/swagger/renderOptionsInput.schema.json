{
  "title": "RosaeNLG Rendering Options",
  "description": "RosaeNLG options to render a template. Custom payload is in additionnal properties. See https://rosaenlg.org/rosaenlg/2.1.0/advanced/params.html#_rendering_parameters",
  "type": "object",
  "properties": {
    "language": {
      "description": "the language of the template",
      "type": "string",
      "enum": ["fr_FR", "en_US", "de_DE", "it_IT", "es_ES", "OTHER"]
    },
    "forceRandomSeed": {
      "description": "the random seed value, if it must be forced",
      "type": "integer"
    },
    "defaultSynoMode": {
      "description": "default mode for synonyms",
      "type": "string"
    },
    "defaultAmong": {
      "description": "default value for among",
      "type": "integer"
    },
    "renderDebug": {
      "description": "activate render debug (default false)",
      "type": "boolean"
    }
  },
  "required": [
    "language"
  ],
  "additionalProperties": true
}